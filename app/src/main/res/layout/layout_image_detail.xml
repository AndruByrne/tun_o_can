<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="rawBitmapMeasurement"
            type="com.anthropicandroid.photogallery.viewmodel.RawBitmapMeasurement"/>

        <variable
            name="detailIndex"
            type="java.lang.Integer"/>

        <variable
            name="detailActionHandlers"
            type="com.anthropicandroid.photogallery.viewmodel.DetailActionHandlers"/>

    </data>

    <RelativeLayout
        android:id="@+id/detail_matting_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorJustBlack"
        android:visibility="visible">

        <ImageView
            android:id="@+id/detail_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:rawBitmapDimen="@{rawBitmapMeasurement}"
            app:detailImage="@{detailIndex}"
            />
    </RelativeLayout>

</layout>